<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    tools:ignore="LabelFor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Warranty"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/textViewAssessmentDetailNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:text="Warranty Name:" />

    <TextView
        android:id="@+id/textViewAssessmentDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewAssessmentDetailTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:text="Warranty Type:" />

    <TextView
        android:id="@+id/textViewAssessmentDetailType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/textViewAssessmentDetailDueDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:text="Experation Date:" />

    <TextView
        android:id="@+id/editTextAssessmentDetailDueDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textViewDetailTermLabel"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="14dp"
        android:text="Product" />

    <TextView
        android:id="@+id/textViewDetailTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:ems="10" />


</GridLayout>
