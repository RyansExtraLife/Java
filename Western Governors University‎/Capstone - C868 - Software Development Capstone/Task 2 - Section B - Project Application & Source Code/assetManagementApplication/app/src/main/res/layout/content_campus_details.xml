<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    tools:ignore="LabelFor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Office: Campus"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewTermTileLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:text="Office Name:" />

    <TextView
        android:id="@+id/textViewTermTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:layout_marginTop="20dp"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textViewTermStartDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:text="Open Date:" />

    <TextView
        android:id="@+id/textViewTermStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:focusableInTouchMode="false"
        android:importantForAutofill="no"
        android:layout_marginTop="20dp"
        android:inputType="date"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textViewTermEndDateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:text="Audit Date:" />

    <TextView
        android:id="@+id/textViewTermEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:focusableInTouchMode="false"
        android:importantForAutofill="no"
        android:layout_marginTop="20dp"
        android:inputType="date"
        tools:targetApi="o" />

</GridLayout>
