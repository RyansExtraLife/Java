<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    tools:ignore="LabelFor">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Vendor Information"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textViewDetailMentorNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:text="Vendor:" />

    <TextView
        android:id="@+id/textViewDetailMentorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:layout_marginTop="20dp"
        android:inputType="text" />

    <TextView
        android:id="@+id/textViewDetailMentorPhoneNumberLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:text="Vendor Phone Number:" />

    <TextView
        android:id="@+id/textViewDetailMentorPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textViewDetailMentorEmailLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:text="Vendor Email: " />

    <TextView
        android:id="@+id/textViewDetailMentorEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:inputType="textWebEmailAddress" />

    <TextView
        android:id="@+id/textViewAssosicatedCourseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:text="Product: " />

    <TextView
        android:id="@+id/textViewAssosicatedCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_margin="8dp"
        android:layout_marginTop="30dp"
        android:inputType="textWebEmailAddress" />



</GridLayout>
